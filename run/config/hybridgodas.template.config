#================================================================================
# Main configuration script for MOM6 hybrid-GODAS runs
#================================================================================

EXP_NAME="${EXP_NAME}"
SCHED_ACCT="cpo_hyb_go"
SCHED_QUEUE="batch"


# Timing
#------------------------------------------------------------
CYCLE_START=2003010512
CYCLE_END=2005010512
CYCLE_LEN=120
FCST_LEAP_ADJ=0


# Fixed directories
#------------------------------------------------------------
ROOT_DIR="${ROOT_DIR}"
EXP_DIR="${EXP_DIR}"
WORK_DIR="${ROOT_DIR}/WRK/${EXP_NAME}"


# Data cycle / timeslots
#---------------------------------------------------------------------
ENSEMBLE=0
ENS_SIZE=1
DA_TIMESLOTS=$(($CYCLE_LEN / 24 ))
DA_WNDW_OFST=-48
FCST_RST_OFST=12


# Observations
#------------------------------------------------------------
OBS_ERR_ON_MISS=0
OBS_USE_SST=1
OBS_SST=${D}ROOT_DIR/DATA/obs/sst_acspo_avhrr/%Y/%Y%m/%Y%m%d.nc
OBS_USE_PROF=1
OBS_PROF_T=${D}ROOT_DIR/DATA/obs/profile_wod/%Y/%Y%m%d.T.nc
OBS_PROF_S=${D}ROOT_DIR/DATA/obs/profile_wod/%Y/%Y%m%d.S.nc


# Surface forcing
#------------------------------------------------------------
FORCING_HR=12
FORCING_PERTURB=1
FORCING_CTRL_FILE=${D}ROOT_DIR/DATA/fluxes/dfs52/%Y/%Y%m%d/dfs52.%Y%m%d.'#var#'.nc
FORCING_ENS_FILE=${D}ROOT_DIR/DATA/fluxes/20CRv2c/%Y/%Y%m%d/'#mem2#'/20cr.%Y%m%d.'#var#'.nc


# MOM6 File I/O formats
#------------------------------------------------------------
FCST_IO_PROC=36
FCST_IO_MISS=("0024")
FCST_FILE_MINSIZE=39000000  # in bytes
FCST_FILE_MINAGE=10 # in seconds


